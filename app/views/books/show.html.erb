<div class="main-container">
  <div class="row content">
    <div class="col-xs-3 sidenav">
      <h2>User info</h2>

      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %>

      <table class="table table-striped">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </table>
      <% if @user.id == current_user.id %>
      <%= link_to "", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        <% else %>
        <%= link_to "", user_path(current_user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        <% end %>

      <h2>New book</h2>
      <%= form_for(Book.new) do |f| %>

        <h4>Title</h4>
          <%= f.text_field :title, class:"col-xs-12" %>

        <h4>Opinion</h4>
          <%= f.text_area :body, class:"col-xs-12" %><br>

        <%= f.submit 'Create Book', class:"c-book btn btn-primary col-xs-12" %>

      <% end %>

    </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "/images/no_image.jpg",size: "100x100" %>
          <br><%= link_to @user.name, user_path(@user) %>
        </td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), class:"btn-sm btn-danger", method: :delete,  "data-confirm" => "本当に？" %></td>
          <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    </table>
  </div>
  </div>
</div>