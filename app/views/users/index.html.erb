<div class="main-container">
  <div class="row content">
    <div class="col-xs-3 sidenav">
      <h2>User info</h2>

      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %>

      <table class="table table-striped">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
