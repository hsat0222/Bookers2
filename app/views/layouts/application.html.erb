<!DOCTYPE html>
<html>

  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class="navbar-left">
            <span class="text-light">Bookers</span>
          </nav>
          <ul class="nav navbar-nav navbar-right">

            <% if user_signed_in? %>
              <li class="nav-menu">
                <span class="glyphicon glyphicon-home" aria-hidden="true">
                  <%= link_to 'Home', user_path(current_user.id) %>
                </span>
              </li class="nav-menu">
              <li>
                <span class="glyphicon glyphicon-user" aria-hidden="true">
                  <%= link_to 'Users', users_path %>
                </span>
              </li>
              <li class="nav-menu">
                <span class="glyphicon glyphicon-book" aria-hidden="true">
                　 <%= link_to 'Books', books_path %>
                </span>
              </li class="nav-menu">
              <li class="">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                  <%= link_to "logout", destroy_user_session_path, method: :delete %>
                </span>
              </li>

              <% else %>
                <li class="nav-menu">
                  <span class="glyphicon glyphicon-home" aria-hidden="true">
                    <%= link_to 'Home', root_path %>
                  </span>
                </li class="nav-menu">
                <li class="nav-menu">
                  <span class="glyphicon glyphicon-link" aria-hidden="true">
                  　<%= link_to 'About', home_about_path %>
                  </span>
                </li>
                <li class="nav-menu">
                  <span class="glyphicon glyphicon-edit" aria-hidden="true">
                    <%= link_to "signup", new_user_registration_path %>
                  </span>
                </li>
                <li class="nav-menu">
                  <span class="glyphicon glyphicon-log-in">
                    <%= link_to "login", new_user_session_path %>
                  </span>
                </li>
            <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- skippr -->
    <div id="container">
      <div id="theTarget">
        <div class="/images/image1"></div>
        <div class="/images/image2"></div>
        <div class="/images/image3"></div>
        <div class="/images/image4"></div>
        <div class="/images/image5"></div>
      </div>
    </div>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>

</html>
